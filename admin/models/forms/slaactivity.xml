<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="hidden"/>
		<field
			name="sla_id"
			required="true"
			type="sql"
			query="SELECT id,title FROM `#__tj_slas` WHERE state = '1' ORDER BY id DESC" key_field="id" value_field="title"
			translate="false"
			header="Select SLA"
			filter="int"
			label="COM_SLA_SLA_ACTIVITY_FORM_LBL_SLA"
			description="COM_SLA_SLA_ACTIVITY_FORM_DESC_SLA"
			/>

		<field
			name="sla_service_id"
			required="true"
			type="sql"
			query="SELECT id,title FROM `#__tj_sla_services` WHERE state = '1' ORDER BY id DESC" key_field="id" value_field="title"
			translate="false"
			header="Select SLA Service"
			filter="int"
			label="COM_SLA_SLA_ACTIVITY_FORM_LBL_SLA_SERVICE"
			description="COM_SLA_SLA_ACTIVITY_FORM_DESC_SLA_SERVICE"
			/>

		<field
			name="cluster_id"
			required="true"
			type="sql"
			query="SELECT id,name FROM `#__tj_clusters` WHERE state = '1' and client='com_multiagency.agency' ORDER BY id DESC" key_field="id" value_field="name"
			translate="false"
			header="Select School"
			filter="int"
			label="COM_SLA_SLA_ACTIVITY_FORM_LBL_SLA_CLUSTER"
			description="COM_SLA_SLA_ACTIVITY_FORM_DESC_SLA_CLUSTER"
			/>

		<field
			name="todo_id"
			type="number"
			class="inputbox"
			label="COM_SLA_SLA_SERVICE_FORM_LBL_TODO_ID"
			description="COM_SLA_SLA_SERVICE_FORM_DESC_TODO_ID"
			filter="integer"
			default="0"
		/>

		<field
			name="license_id"
			type="number"
			class="inputbox"
			label="COM_SLA_SLA_SERVICE_FORM_LBL_LICENSE_ID"
			description="COM_SLA_SLA_SERVICE_FORM_DESC_LICENSE_ID"
			filter="integer"
			default="0"
		/>

		<field
			name="state"
			type="list"
			filter="int"
			label="JSTATUS"
			description=""
			default="1"
			class="inputbox"
			size="1">
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
				<option value="2">JARCHIVED</option>
				<option value="-2">JTRASHED</option>
		</field>

		<field
			name="created_by"
			type="hidden"
			label="COM_SLA_SLA_FORM_LBL_CREATED_BY"/>

		<field
			name="modified_on"
			type="hidden"/>

		<field
			name="modified_by"
			type="hidden"
		/>

		<field
			name="created_on"
			type="hidden"/>

		<field
			name="ordering"
			type="hidden"
			filter="int"/>

		<field
			name="checked_out"
			type="hidden"
			filter="unset"/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"/>
	</fieldset>
</form>
