<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			filter="string"
			label="COM_SLA_SLA_ACTIVITY_FILTER_SEARCH_LABEL"
			description="COM_SLA_SLA_ACTIVITY_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="license_id"
			type="licenses"
			label="COM_SLA_SLA_ACTIVITY_FILTER_LICENSE_LABEL"
			description="COM_SLA_SLA_ACTIVITY_FILTER_LICENSE_DESC"
			multiple="false"
			addfieldpath="/components/com_multiagency/models/fields"
			onchange="this.form.submit();"
		/>

		<field
			name="sla_activity_type_id"
			type="sql"
			filter="int"
			query="SELECT id,title FROM `#__tj_sla_activity_types` WHERE state = '1' ORDER BY id DESC" key_field="id" value_field="title"
			translate="false"
			header="COM_SLA_SLA_ACTIVITY_FILTER_TYPE_HEADER"
			label="COM_SLA_SLA_ACTIVITY_FILTER_TYPE_LABEL"
			description="COM_SLA_SLA_ACTIVITY_FILTER_TYPE_DESC"
			onchange="this.form.submit();"
		/>

		<field
			name="start_date"
			type="calendar"
			default=""
			singleheader="true"
			filltable="true"
			label="COM_SLA_SLA_ACTIVITY_FILTER_START_DATE_LABEL"
			description="COM_SLA_SLA_ACTIVITY_FILTER_START_DATE_DESC"
			hint="COM_SLA_SLA_ACTIVITY_FILTER_START_DATE_LABEL"
			class="calendar-textfield-class"
			todaybutton="true"
			onchange="this.form.submit();"
		/>

		<field
			name="due_date"
			type="calendar"
			default=""
			singleheader="true"
			filltable="true"
			label="COM_SLA_SLA_ACTIVITY_FILTER_DUE_DATE_LABEL"
			description="COM_SLA_SLA_ACTIVITY_FILTER_DUE_DATE_DESC"
			hint="COM_SLA_SLA_ACTIVITY_FILTER_DUE_DATE_LABEL"
			class="calendar-textfield-class"
			todaybutton="true"
			onchange="this.form.submit();"
		/>

		<field
			name="lead_consultant_id"
			label="COM_SLA_SLA_ACTIVITY_FORM_LBL_LEAD_CONSULTANT"
			description="COM_SLA_SLA_ACTIVITY_FORM_DESC_LEAD_CONSULTANT"
			type="subusers"
			client="com_multiagency"
			action="core.dpe.staff"
			onchange="this.form.submit();"
		/>

		<field name="sla_status"
			default=""
			type="list"
			filter="string"
			label="COM_SLA_ACTIVITY_STATUS_SELECT"
			description="COM_SLA_ACTIVITY_STATUS_DESC"
			onchange="this.form.submit();">
			<option value="">COM_SLA_ACTIVITY_STATUS_SELECT</option>
			<option value="I">COM_SLA_INCOMPLETE_STATUS</option>
			<option value="C">COM_SLA_COMPLETE_STATUS</option>
			<option value="CN">COM_SLA_CANCELLED_STATUS</option>
		</field>

		<input type="hidden" name="form_submited" value="1"/>
	</fields>

	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			class="inputbox input-mini"
			default=""
			onchange="this.form.submit();"
		/>
	</fields>
</form>
